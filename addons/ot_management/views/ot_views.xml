<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <menuitem
            id="ot_menu_root"
            name="OT Management"/>
        <menuitem
            id="ot_registration_menu"
            name="My OT Registration"
            parent="ot_menu_root"/>

        <record
            id="ot_registration_tree"
            model="ir.ui.view">
            <field name="name">ot.registration.tree</field>
            <field name="model">ot.registration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="project_id"/>
                    <field name="employee_id"/>
                    <field name="approve_id" string="Manager Approve"/>
                    <field name="total_ot" string="OT hours"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record
            id="ot_registration_form"
            model="ir.ui.view">
            <field name="name">ot.registration.form</field>
            <field name="model">ot.registration</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="submit_draft" type="object" icon="fa-reply text-warning" string="Submit"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group col="2">
                        <group colspan="1">
                            <field name="project_id"/>
                            <field name="approve_id"/>
                            <field name="ot_month"/>
                        </group>
                        <group colspan="1">
                            <field name="employee_id"/>
                            <field name="lead_id"/>
                            <field name="create_date" string="Created Date"/>
                            <field name="total_ot"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Line">
                            <field name="request_line_ids">
                                <tree editable="bottom">
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="ot_category"/>
                                    <field name="from_home"/>
                                    <field name="ot_hours"/>
                                    <field name="job_taken"/>
                                    <field name="state"/>
                                    <field name="late_approved"/>
                                    <field name="hr_notes"/>
                                    <field name="attendance_notes"/>
                                    <field name="warning"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record
            id="ot_registration_action"
            model="ir.actions.act_window">
            <field name="name">Registration</field>
            <field name="res_model">ot.registration</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record
            id="ot_request_line_tree"
            model="ir.ui.view">
            <field name="name">ot.request.line.tree</field>
            <field name="model">ot.request.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                    <field name="is_intern"/>
                    <field name="project_id"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="ot_category"/>
                    <field name="ot_hours"/>
                    <field name="job_taken"/>
                    <field name="late_approved"/>
                    <field name="state"/>
                    <field name="hr_notes"/>
                </tree>
            </field>
        </record>

