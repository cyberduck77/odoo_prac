<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <menuitem
            id="ot_menu_root"
            name="OT Management"/>
        <menuitem
            id="ot_registration_menu"
            name="My OT Registration"
            parent="ot_menu_root"/>

        <record
            id="ot_registration_tree"
            model="ir.ui.view">
            <field name="name">ot.registration.tree</field>
            <field name="model">ot.registration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record
            id="ot_registration_form"
            model="ir.ui.view">
            <field name="name">ot.registration.form</field>
            <field name="model">ot.registration</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group col="2">
                        <group colspan="1">
                            <field name="name" invisible="1"/>
                            <field name="project_id"/>
                            <field name="approve_id"/>
                            <field name="ot_month"/>
                        </group>
                        <group colspan="1">
                            <field name="employee_id"/>
                            <field name="lead_id"/>
                            <field name="create_date" string="Created Date"/>
                            <field name="total_ot"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Line">
                            <field name="request_line_ids"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record
            id="ot_registration_action"
            model="ir.actions.act_window">
            <field name="name">Registration</field>
            <field name="res_model">ot.registration</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record
            id="ot_request_line_tree"
            model="ir.ui.view">
            <field name="name">ot.request.line.tree</field>
            <field name="model">ot.request.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record
            id="ot_request_line_form"
            model="ir.ui.view">
            <field name="name">ot.request.line.form</field>
            <field name="model">ot.request.line</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record
            id="ot_request_line_action"
            model="ir.actions.act_window">
            <field name="name">Request Lines</field>
            <field name="res_model">ot.request.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="ot_registration_details"
            name="Registration"
            parent="ot_registration_menu"
            action="ot_registration_action"/>
        <menuitem
            id="ot_request_lines"
            name="Request Lines"
            parent="ot_registration_menu"
            action="ot_request_line_action"/>
    </data>
</odoo>